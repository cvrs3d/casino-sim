# Environment variables for casino-sim services
# Copy this file to .env and adjust values as needed

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Database Configuration
DATABASE_URL=sqlite:///./casino.db

# Service Ports
PLAYER_SERVICE_PORT=8001
GAME_SERVICE_PORT=8002
TRANSACTION_SERVICE_PORT=8003
ADMIN_SERVICE_PORT=8004
VISUALIZER_SERVICE_PORT=8501

# RabbitMQ Management Interface
RABBITMQ_MANAGEMENT_PORT=15672
